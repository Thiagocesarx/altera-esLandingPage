
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
    @inject LanguageService language
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="Email" required>
    </div>
    <div class="form-group">
        <label for="senha">Senha:</label>
        <input type="password" class="form-control" id="senha" name="@language.GetKey("Senha")" required>
    </div>
    <div>
        <a class="link-opacity-50-hover p-2 ms-auto" asp-area="" asp-controller="Usuarios" asp-action="ongVol">Cadastre-se</a>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (ViewBag.Mensagem != null)
{
    <div>@ViewBag.Mensagem</div>
}
